/* Cancel */
.cancel-container {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
}

.cancel-content {
  text-align: center;
  max-width: 37.5rem;
  background: var(--color-white);
  padding: var(--spacing-2xl) var(--spacing-xl);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-xl);
}

.cancel-icon {
  width: 5rem;
  height: 5rem;
  background: var(--color-error);
  color: var(--color-white);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 3rem;
  margin: 0 auto var(--spacing-lg);
  animation: scaleIn 0.5s ease-out;
}

@keyframes scaleIn {
  from {
    transform: scale(0);
  }
  to {
    transform: scale(1);
  }
}

.cancel-content h1 {
  color: var(--color-dark);
  margin-bottom: var(--spacing-md);
  font-size: 2rem;
}

.cancel-content p {
  color: var(--color-gray-600);
  font-size: 1.1rem;
  margin-bottom: var(--spacing-md);
  line-height: 1.6;
}

.cancel-message {
  margin-top: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
}

.cancel-actions {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  margin-top: var(--spacing-xl);
}

.btn-primary,
.btn-secondary {
  padding: var(--spacing-md) var(--spacing-xl);
  border: none;
  border-radius: var(--radius-md);
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-base);
}

.btn-primary {
  background: var(--color-dark);
  color: var(--color-white);
}

.btn-primary:hover {
  background: var(--color-dark-secondary);
  transform: translateY(-0.0625rem);
  box-shadow: var(--shadow-md);
}

.btn-secondary {
  background: transparent;
  color: var(--color-gray-600);
  border: 0.0625rem solid var(--color-gray-200);
}

.btn-secondary:hover {
  background: var(--color-gray-50);
  color: var(--color-dark);
}

@media (max-width: 48rem) {
  .cancel-content {
    padding: var(--spacing-xl) var(--spacing-lg);
  }

  .cancel-content h1 {
    font-size: 1.5rem;
  }

  .cancel-icon {
    width: 3.75rem;
    height: 3.75rem;
    font-size: 2rem;
  }
}

/* Checkout */
.checkout-container {
  max-width: 50rem;
  margin: 0 auto;
  padding: var(--spacing-xl) var(--spacing-md);
}

.checkout-container h1 {
  margin-bottom: var(--spacing-xl);
  color: var(--color-dark);
}

.checkout-empty {
  text-align: center;
  padding: var(--spacing-2xl) var(--spacing-xl);
}

.checkout-empty h2 {
  color: var(--color-dark);
  margin-bottom: var(--spacing-md);
}

.checkout-empty p {
  color: var(--color-gray-600);
  margin-bottom: var(--spacing-xl);
}

.checkout-summary {
  background: var(--color-white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-lg);
}

.checkout-summary h2 {
  color: var(--color-dark);
  margin-bottom: var(--spacing-lg);
  font-size: 1.5rem;
}

.checkout-items {
  border-top: 0.0625rem solid var(--color-gray-200);
  border-bottom: 0.0625rem solid var(--color-gray-200);
  padding: var(--spacing-md) 0;
  margin-bottom: var(--spacing-lg);
}

.checkout-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) 0;
  border-bottom: 0.0625rem solid var(--color-gray-200);
}

.checkout-item:last-child {
  border-bottom: none;
}

.checkout-item-info h3 {
  color: var(--color-dark);
  font-size: 1.1rem;
  margin-bottom: var(--spacing-sm);
}

.checkout-item-quantity {
  color: var(--color-gray-600);
  font-size: 1rem;
}

.checkout-item-price {
  font-size: 1.2rem;
  font-weight: 600;
  color: var(--color-dark);
}

.checkout-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) 0;
  margin-bottom: var(--spacing-xl);
}

.checkout-total h3 {
  color: var(--color-dark);
  font-size: 1.5rem;
}

.checkout-total-amount {
  font-size: 2rem;
  font-weight: 700;
  color: var(--color-primary);
}

.btn-checkout {
  width: 100%;
  padding: var(--spacing-md);
  background: var(--color-primary);
  color: var(--color-white);
  border: none;
  border-radius: var(--radius-md);
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-base);
  margin-bottom: var(--spacing-md);
}

.btn-checkout:hover {
  background: var(--color-primary-dark);
  transform: translateY(-0.0625rem);
  box-shadow: var(--shadow-md);
}

.btn-primary,
.btn-secondary {
  width: 100%;
  padding: 0.875rem;
  border: none;
  border-radius: var(--radius-md);
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-base);
}

.btn-primary {
  background: var(--color-primary);
  color: var(--color-white);
}

.btn-primary:hover {
  background: var(--color-primary-dark);
}

.btn-secondary {
  background: transparent;
  color: var(--color-gray-600);
  border: 0.0625rem solid var(--color-gray-200);
}

.btn-secondary:hover {
  background: var(--color-gray-50);
  color: var(--color-dark);
}

@media (max-width: 48rem) {
  .checkout-container {
    padding: var(--spacing-md);
  }

  .checkout-summary {
    padding: var(--spacing-lg);
  }

  .checkout-total-amount {
    font-size: 1.5rem;
  }
}

