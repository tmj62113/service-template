  background: #fee2e2;
}

/* Pagination */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 0.5rem;
}

.page-btn {
  background: white;
  border: 0.0625rem solid #e1dbcb;
  border-radius: 0.375rem;
  padding: 0.5rem 0.75rem;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.2s;
  min-width: 2.25rem;
}

.page-btn:hover {
  background: #f9fafb;
  border-color: #d1d5db;
}

.page-btn.active {
  background: #101014;
  color: white;
  border-color: #101014;
}

.pagination-dots {
  color: #e1dbcb;
  padding: 0 0.25rem;
}

@media (max-width: 48rem) {
  .products-controls {
    flex-direction: column;
    align-items: stretch;
    gap: 0.75rem;
  }

  .products-actions {
    width: 100%;
    flex-direction: column;
  }

  .control-btn {
    width: 100%;
    justify-content: center;
  }

  /* Card layout for mobile */
  .products-table-container {
    overflow: visible;
  }

  .products-table thead {
    display: none;
  }

  .products-table,
  .products-table tbody,
  .products-table tr {
    display: block;
    width: 100%;
  }

  .products-table tr {
    margin-bottom: 1rem;
    border: 0.0625rem solid #e1dbcb;
    border-radius: 0.75rem;
    padding: 1rem;
    background: white;
  }

  .products-table td {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
    border-bottom: 0.0625rem solid #f0f0f0;
  }

  .products-table td:last-child {
    border-bottom: none;
  }

  .products-table td::before {
    content: attr(data-label);
    font-weight: 600;
    font-size: 1rem;
    color: #101014;
    text-transform: uppercase;
    letter-spacing: 0.0313rem;
  }

  .pagination {
    flex-wrap: wrap;
  }
}

