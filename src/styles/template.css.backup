  padding: 0.5rem 1rem;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.2s;
}

.control-btn:hover {
  background: #f9fafb;
  border-color: #d1d5db;
}

.sort-dropdown {
  position: relative;
}

.sort-dropdown:hover .sort-menu {
  display: block;
}

.sort-menu {
  display: none;
  position: absolute;
  top: 100%;
  right: 0;
  margin-top: 0.5rem;
  background: white;
  border: 0.0625rem solid #e1dbcb;
  border-radius: 0.5rem;
  box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.1);
  min-width: 9.375rem;
  z-index: 100;
}

.sort-menu button {
  display: block;
  width: 100%;
  padding: 0.75rem 1rem;
  border: none;
  background: none;
  text-align: left;
  font-size: 1rem;
  cursor: pointer;
  transition: background 0.2s;
}

.sort-menu button:first-child {
  border-radius: 0.5rem 0.5rem 0 0;
}

.sort-menu button:last-child {
  border-radius: 0 0 0.5rem 0.5rem;
}

.sort-menu button:hover {
  background: #f9fafb;
}

.products-table-container {
  background: white;
  border-radius: 1rem;
  overflow: hidden;
  overflow-x: auto;
  box-shadow: 0 0.0625rem 0.1875rem rgba(0, 0, 0, 0.1);
  margin-bottom: 1.5rem;
}

.products-table {
  width: 100%;
  border-collapse: collapse;
}

.products-table thead {
  background: #f9fafb;
  border-bottom: 0.0625rem solid #e1dbcb;
}

.products-table th {
  padding: 1rem;
