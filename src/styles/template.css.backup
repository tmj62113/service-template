  font-size: 1rem;
  font-weight: 600;
  color: #101014;
  text-transform: uppercase;
  letter-spacing: 0.0313rem;
}

.products-table tbody tr {
  border-bottom: 0.0625rem solid #f0f0f0;
  cursor: pointer;
  transition: background 0.2s;
}

.products-table tbody tr:hover {
  background: #f9fafb;
}

.products-table tbody tr:last-child {
  border-bottom: none;
}

.products-table td {
  padding: 1rem;
  font-size: 1rem;
  color: #101014;
}

.product-name {
  font-weight: 500;
}

.product-id {
