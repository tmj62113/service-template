}

/* Features */
.product-detail-features {
  border-top: 0.0625rem solid var(--color-gray-200);
  padding-top: var(--spacing-lg);
}

.product-detail-features h3 {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--color-dark);
  margin-bottom: var(--spacing-md);
}

.product-detail-features ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.product-detail-features li {
  padding: var(--spacing-sm) 0;
  color: var(--color-gray-600);
  font-size: 1rem;
  line-height: 1.6;
  position: relative;
  padding-left: var(--spacing-lg);
}

.product-detail-features li::before {
  content: "✓";
  position: absolute;
  left: 0;
  color: var(--color-success);
  font-weight: bold;
}

/* Success */
.success-container {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
}

.success-content {
  text-align: center;
  max-width: 37.5rem;
  background: var(--color-white);
  padding: var(--spacing-2xl) var(--spacing-xl);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-xl);
}

.success-icon {
  width: 5rem;
  height: 5rem;
  background: var(--color-success);
  color: var(--color-white);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 3rem;
  margin: 0 auto var(--spacing-lg);
  animation: scaleIn 0.5s ease-out;
}

@keyframes scaleIn {
  from {
    transform: scale(0);
  }
  to {
    transform: scale(1);
  }
}

.success-content h1 {
  color: var(--color-dark);
  margin-bottom: var(--spacing-md);
  font-size: 2rem;
}

.success-content p {
  color: var(--color-gray-600);
  font-size: 1.1rem;
  margin-bottom: var(--spacing-md);
  line-height: 1.6;
}

.session-id {
  font-family: var(--font-family-mono);
  font-size: 0.9rem;
  color: var(--color-gray-600);
  margin: var(--spacing-md) 0;
}

.success-message {
  margin-top: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
}

.success-actions {
  margin-top: var(--spacing-xl);
}

.btn-primary {
  padding: var(--spacing-md) var(--spacing-xl);
  background: var(--color-dark);
  color: var(--color-white);
  border: none;
  border-radius: var(--radius-md);
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-base);
}

.btn-primary:hover {
  background: var(--color-dark-secondary);
  transform: translateY(-0.0625rem);
  box-shadow: var(--shadow-md);
}

@media (max-width: 48rem) {
  .success-content {
    padding: var(--spacing-xl) var(--spacing-lg);
  }

  .success-content h1 {
    font-size: 1.5rem;
  }

  .success-icon {
    width: 3.75rem;
    height: 3.75rem;
    font-size: 2rem;
  }
}

/* =====================================================
   CLOCKWORK BRANDING - CSS VARIABLE OVERRIDES ONLY
   =====================================================
   IMPORTANT: This section should ONLY contain CSS variable
   overrides. Do NOT redefine classes that exist in
   design-system.css (like .btn, .card, .form-*, etc.)
   
   design-system.css provides the utility classes.
   This section provides the brand-specific values.
   ===================================================== */

:root {
  /* Clockwork Brand Colors */
  --color-cream: #f2f0ea;
  --color-tan: #e1dbcb;
  --color-dark: #101014;

  /* Override design-system.css variables */
  --color-primary: #e1dbcb;
  --color-primary-dark: #e1dbcb;
  --color-primary-light: #f2f0ea;

  --color-dark: #101014;
  --color-dark-secondary: #101014;

  --color-background: #f2f0ea;
  --color-white: #f2f0ea;

  /* Grayscale using Clockwork palette */
  --color-gray-900: #101014;
  --color-gray-800: #101014;
  --color-gray-700: #101014;
  --color-gray-600: #101014;
  --color-gray-500: #101014;
  --color-gray-400: #e1dbcb;
  --color-gray-300: #e1dbcb;
  --color-gray-200: #e1dbcb;
  --color-gray-100: #f2f0ea;
  --color-gray-50: #f2f0ea;

  /* Feedback colors using Clockwork palette */
  --color-success: #101014;
  --color-success-light: #e1dbcb;
  --color-success-dark: #101014;

  --color-error: #101014;
  --color-error-light: #e1dbcb;
  --color-error-dark: #101014;

  --color-warning: #101014;
  --color-warning-light: #e1dbcb;
  --color-warning-dark: #101014;

  /* Typography */
  --font-family: "Work Sans", -apple-system, BlinkMacSystemFont, sans-serif;
  --font-heading: "Urbanist", sans-serif;
  --font-body: "Work Sans", sans-serif;

  /* Layout - Clockwork uses tighter max-width */
  --max-width: 65.625rem;
  --container-max-width: 65.625rem;
}

/* Global body styles */
body {
  font-family: var(--font-body);
  background-color: var(--color-background);
  color: var(--color-dark);
}

/* Clockwork typography hierarchy - All headings same size */
h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: var(--font-heading);
  font-size: 1.875rem;
  line-height: 1.2;
  font-weight: 400;
  text-transform: uppercase;
  color: var(--color-dark);
}

/* Logo sizing */
.logo img,
.footer-logo {
  height: 5rem;
  width: auto;
}

@media (max-width: 48rem) {
  .logo img,
  .footer-logo {
    height: 3.75rem;
  }
}
