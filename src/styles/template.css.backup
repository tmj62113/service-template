/* =====================================================
   TEMPLATE STYLES
   =====================================================
   Consolidated styles from all components and pages.
   Uses CSS variables from design-system.css.
   For client customizations, use client.css
   ===================================================== */

/* =====================================
   APP LAYOUT
   ===================================== */
* {
  box-sizing: border-box;
}

#root {
  width: 100%;
  min-height: 100vh;
}

.app-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

main {
  flex: 1;
}
/* =====================================
   COMPONENTS
   ===================================== */

/* AdminLayout */
.admin-layout {
  display: flex;
  min-height: 100vh;
  background: #f2f0ea;
}

/* Sidebar */
.admin-sidebar {
  width: 15rem;
  background: #101014;
  color: #f2f0ea;
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 0;
  top: 0;
  height: 100vh;
  z-index: 100;
  transition: width 0.3s ease;
}

.sidebar-header {
  padding: 1.5rem 1rem;
  border-bottom: 0.0625rem solid rgba(255, 255, 255, 0.1);
}

.company-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  font-size: 1.125rem;
  font-weight: 600;
}

.company-logo img {
  height: 2.5rem;
  width: auto;
  display: block;
}

.company-logo svg {
  flex-shrink: 0;
}

.sidebar-nav {
  flex: 1;
  padding: 1rem 0;
  overflow-y: auto;
}

.nav-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.75rem 1.25rem;
  color: #e1dbcb;
  text-decoration: none;
  transition: all 0.2s;
  font-size: 1rem;
  font-weight: 500;
  position: relative;
}

.nav-item:hover {
  background: rgba(255, 255, 255, 0.05);
  color: white;
}

.nav-item.active {
  background: rgba(255, 255, 255, 0.1);
  color: white;
}

.nav-item.active::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 0.1875rem;
  background: white;
}

.nav-item svg {
  flex-shrink: 0;
}

.nav-badge {
  margin-left: auto;
  background: #e1dbcb;
  color: #101014;
  font-size: 1rem;
  font-weight: 600;
  padding: 0.125rem 0.375rem;
  border-radius: 0.625rem;
  min-width: 1.125rem;
  text-align: center;
}

.sidebar-footer {
  padding: 1rem;
  border-top: 0.0625rem solid rgba(255, 255, 255, 0.1);
}

.sidebar-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  width: 100%;
  padding: 0.75rem 1.25rem;
  background: none;
  border: none;
  color: #a0a0a0;
  text-align: left;
  text-decoration: none;
  cursor: pointer;
  font-size: 1rem;
  font-weight: 500;
  transition: color 0.2s;
}

.sidebar-link:hover {
  color: white;
}

.sidebar-link.logout {
  color: #101014;
}

.sidebar-link.logout:hover {
  color: #101014;
}

/* Main Content Area */
.admin-main {
  flex: 1;
  margin-left: 15rem;
  display: flex;
  flex-direction: column;
}

.admin-header {
  background: white;
  padding: 1.25rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 0.0625rem solid #e1dbcb;
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-left h1 {
  font-size: 1.5rem;
  font-weight: 600;
  margin: 0 0 0.25rem 0;
  color: #101014;
}

.header-subtitle {
  margin: 0;
  color: #101014;
  font-size: 1rem;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: #f2f0ea;
  border: 0.0625rem solid #e1dbcb;
  border-radius: 0.5rem;
  padding: 0.5rem 0.75rem;
  min-width: 12.5rem;
}

.search-box svg {
  color: #101014;
}

.search-box input {
  border: none;
  background: none;
  outline: none;
  font-size: 1rem;
  flex: 1;
}

.notification-wrapper {
  position: relative;
}

.notification-btn {
  position: relative;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 0.5rem;
  transition: background 0.2s;
}

.notification-btn:hover {
  background: #f2f0ea;
}

.notification-badge {
  position: absolute;
  top: 0.25rem;
  right: 0.25rem;
  background: #101014;
  color: white;
  font-size: 1rem;
  font-weight: 600;
  padding: 0.125rem 0.3125rem;
  border-radius: 0.625rem;
  min-width: 1rem;
  text-align: center;
}

.notification-dropdown {
  position: absolute;
  top: calc(100% + 8px);
  right: 0;
  width: 22.5rem;
  max-height: 31.25rem;
  background: white;
  border: 0.0625rem solid #e1dbcb;
  border-radius: 0.5rem;
  box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.1);
  z-index: 100;
  overflow: hidden;
}

.notification-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem;
  border-bottom: 0.0625rem solid #e1dbcb;
}

.notification-header h3 {
  margin: 0;
  font-size: 1rem;
  font-weight: 600;
  color: #101014;
}

.notification-count {
  background: #f2f0ea;
  color: #101014;
  font-size: 1rem;
  font-weight: 600;
  padding: 0.25rem 0.5rem;
  border-radius: 0.75rem;
}

.notification-list {
  max-height: 25rem;
  overflow-y: auto;
}

.notification-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2.5rem 1.25rem;
  color: #e1dbcb;
}

.notification-empty .material-symbols-outlined {
  font-size: 3rem;
  margin-bottom: 0.75rem;
  color: #e1dbcb;
}

.notification-empty p {
  margin: 0;
  font-size: 1rem;
}

.notification-section {
  padding: 0.75rem 0;
  border-bottom: 0.0625rem solid #f2f0ea;
}

.notification-section:last-child {
  border-bottom: none;
}

.notification-section h4 {
  margin: 0 0 0.5rem 0;
  padding: 0 1rem;
  font-size: 1rem;
  font-weight: 600;
  color: #101014;
  text-transform: uppercase;
  letter-spacing: 0.0313rem;
}

.notification-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.75rem 1rem;
  text-decoration: none;
  color: inherit;
  transition: background 0.2s;
}

.notification-item:hover {
  background: #f2f0ea;
}

.notification-item .material-symbols-outlined {
  flex-shrink: 0;
  font-size: 1.25rem;
  color: #101014;
}

.notification-content {
  flex: 1;
  min-width: 0;
}

.notification-title {
  margin: 0 0 0.25rem 0;
  font-size: 1rem;
  font-weight: 500;
  color: #101014;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.notification-subtitle {
  margin: 0;
  font-size: 1rem;
  color: #101014;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.view-all-link {
  display: block;
  padding: 0.5rem 1rem;
  text-align: center;
  font-size: 1rem;
  font-weight: 500;
  color: #101014;
  text-decoration: none;
  transition: background 0.2s;
}

.view-all-link:hover {
  background: #f2f0ea;
}

.profile-wrapper {
  position: relative;
}

.user-profile {
  display: flex;
  align-items: center;
  gap: 0.625rem;
  cursor: pointer;
  padding: 0.375rem 0.75rem;
  border-radius: 0.5rem;
  transition: background 0.2s;
}

.user-profile:hover {
  background: #f2f0ea;
}

.user-profile img {
  width: 2.25rem;
  height: 2.25rem;
  border-radius: 50%;
  object-fit: cover;
}

.user-profile span {
  font-size: 1rem;
  font-weight: 500;
  color: #101014;
}

.profile-dropdown {
  position: absolute;
  top: calc(100% + 8px);
  right: 0;
  width: 17.5rem;
  background: white;
  border: 0.0625rem solid #e1dbcb;
  border-radius: 0.5rem;
  box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.1);
  z-index: 100;
  overflow: hidden;
}

.profile-dropdown-header {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem;
  border-bottom: 0.0625rem solid #e1dbcb;
}

.profile-dropdown-header img {
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
  object-fit: cover;
}

.profile-name {
  margin: 0 0 0.25rem 0;
  font-size: 1rem;
  font-weight: 600;
  color: #101014;
}

.profile-email {
  margin: 0;
  font-size: 1rem;
  color: #101014;
}

.profile-dropdown-menu {
  padding: 0.5rem 0;
}

.profile-menu-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  width: 100%;
  padding: 0.75rem 1rem;
  background: none;
  border: none;
  color: #101014;
  text-align: left;
  text-decoration: none;
  cursor: pointer;
  font-size: 1rem;
  font-weight: 500;
  transition: background 0.2s;
}

.profile-menu-item:hover {
  background: #f2f0ea;
}

.profile-menu-item .material-symbols-outlined {
  font-size: 1.25rem;
  color: #101014;
}

.profile-menu-item.logout {
  color: #101014;
  border-top: 0.0625rem solid #e1dbcb;
}

.profile-menu-item.logout .material-symbols-outlined {
  color: #101014;
}

.profile-menu-item.logout:hover {
  background: #fff5f5;
}

.admin-content {
  flex: 1;
  padding: 2rem;
  overflow-y: auto;
}

/* Mobile Menu Button */
.mobile-menu-btn {
  display: none;
  background: none;
  border: none;
  padding: 0.5rem;
  cursor: pointer;
  border-radius: 0.5rem;
  transition: background 0.2s;
}

.mobile-menu-btn:hover {
  background: #f2f0ea;
}

.mobile-menu-btn .material-symbols-outlined {
  font-size: 1.5rem;
  color: #101014;
}

/* Mobile Menu Overlay */
.mobile-menu-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
}

/* Responsive */
@media (max-width: 48rem) {
  .mobile-menu-btn {
    display: block;
  }

  .mobile-menu-overlay {
    display: block;
  }

  .admin-sidebar {
    position: fixed;
    left: -15rem;
    width: 15rem;
    z-index: 100;
    transition: left 0.3s ease;
  }

  .admin-sidebar.mobile-open {
    left: 0;
  }

  .admin-main {
    margin-left: 0;
  }

  .admin-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
  }

  .header-left {
    width: 100%;
  }

  .header-left h1 {
    font-size: 1.25rem;
  }

  .header-right {
    width: 100%;
    justify-content: space-between;
  }

  .search-box {
    flex: 1;
    min-width: auto;
  }

  .user-profile span {
    display: none;
  }

  .admin-content {
    padding: 1rem;
  }
}

/* Footer */
.footer {
  background: #f2f0ea;
  color: #101014;
  margin-top: auto;
  border-top: 0.0625rem solid #e1dbcb;
}

.footer-content {
  max-width: 90rem;
  margin: 0 auto;
  padding: 5rem 3.75rem;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 3.75rem;
  flex-wrap: wrap;
}

.footer-logo {
  height: 5rem;
  width: auto;
  display: block;
}

.footer-section h3 {
  color: #101014;
  margin: 0 0 1rem 0;
  font-size: 1rem;
  font-weight: 500;
}

.footer-section h4 {
  color: #101014;
  margin: 0 0 1rem 0;
  font-size: 1rem;
  font-weight: 500;
}

.footer-section p {
  margin: 0;
  font-size: 1rem;
  line-height: 1.6;
  font-weight: 500;
}

.footer-nav {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.footer-nav a {
  color: #101014;
  text-decoration: underline;
  font-size: 1rem;
  font-weight: 500;
  transition: opacity 0.2s ease;
}

.footer-nav a:hover {
  opacity: 0.7;
}

.footer-bottom {
  border-top: 0.0625rem solid #e1dbcb;
  padding: 1.875rem 3.75rem;
  max-width: 90rem;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-bottom p {
  margin: 0;
  font-size: 1rem;
  font-weight: 500;
  color: #101014;
}

@media (max-width: 48rem) {
  .footer-content {
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
    padding: var(--spacing-xl) var(--spacing-md) var(--spacing-lg);
  }

  .footer-logo {
    height: 3.75rem;
  }

  .footer-section h3 {
    font-size: 1.25rem;
  }
}

/* Header */
.header {
  background: #f2f0ea;
  border-bottom: 0.0625rem solid #e1dbcb;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-content {
  max-width: 90rem;
  margin: 0 auto;
  padding: 1.25rem 3.75rem;
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: flex-start;
  gap: 1.5rem;
}

.header-left {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}

.header-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 1rem;
}

.logo {
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo-img {
  height: 4.375rem;
  width: auto;
  display: block;
}

/* Social Icons */
.header-social {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.header-social a {
  color: var(--color-dark);
  opacity: 0.7;
  transition: opacity var(--transition-base);
  display: flex;
  align-items: center;
}

.header-social a:hover {
  opacity: 1;
}

/* Desktop Navigation - Inside Header */
.nav-bar {
  width: 100%;
}

.nav-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  list-style: none;
  padding: 0;
  margin: 0;
}

.nav-content li {
  width: 100%;
}

.nav-content a {
  color: var(--color-dark);
  text-decoration: none;
  font-weight: 500;
  font-size: 1rem;
  letter-spacing: 0.0313rem;
  text-transform: uppercase;
  transition: color var(--transition-base);
  display: block;
}

.nav-content a:hover {
  color: var(--color-gray-600);
}

.admin-nav-link {
  display: flex;
  align-items: center;
  gap: 0.375rem;
}

.admin-nav-link .material-symbols-outlined {
  font-size: 1.125rem;
}

/* Desktop navigation - hide on mobile */
.desktop-nav {
  display: block;
}

@media (max-width: 48rem) {
  .desktop-nav {
    display: none;
  }
}

.desktop-only {
  display: flex;
}

@media (max-width: 48rem) {
  .desktop-only {
    display: none;
  }
}

/* User Menu */
.user-menu {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.user-name {
  color: var(--color-dark);
  font-size: 1rem;
  font-weight: 500;
}

.logout-button {
  background: transparent;
  border: 0.0625rem solid var(--color-gray-200);
  color: var(--color-dark);
  padding: 0.375rem var(--spacing-md);
  border-radius: var(--radius-sm);
  cursor: pointer;
  font-size: 1rem;
  font-weight: 500;
  transition: all var(--transition-base);
}

.logout-button:hover {
  background: var(--color-error);
  color: var(--color-white);
  border-color: var(--color-error);
}

.cart-button {
  position: relative;
  background: var(--color-dark);
  color: var(--color-white);
  border: none;
  padding: var(--spacing-sm) 1.25rem;
  border-radius: var(--radius-lg);
  cursor: pointer;
  font-size: 1.25rem;
  transition: background var(--transition-base);
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.cart-button:hover {
  background: var(--color-dark-secondary);
}

.cart-icon {
  line-height: 1;
}

.cart-badge {
  position: absolute;
  top: -0.5rem;
  right: -0.5rem;
  background: var(--color-error);
  color: var(--color-white);
  border-radius: var(--radius-full);
  width: 1.5rem;
  height: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1rem;
  font-weight: 700;
}

@media (max-width: 48rem) {
  .header-content {
    grid-template-columns: auto 1fr auto;
    padding: 1rem 1.25rem;
    gap: var(--spacing-sm);
  }

  .header-center {
    justify-content: center;
  }

  .logo-img {
    height: 3.125rem;
  }

  .user-menu {
    display: none; /* Hide user menu on mobile, show in mobile menu instead */
  }
}
/* MobileMenu */
/* Mobile Menu Button (Hamburger) */
.mobile-menu-button {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  padding: var(--spacing-sm);
  z-index: 1001;
}

@media (max-width: 48rem) {
  .mobile-menu-button {
    display: block;
  }
}

/* Hamburger Icon */
.hamburger {
  width: 1.5rem;
  height: 1.25rem;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hamburger span {
  display: block;
  height: 0.125rem;
  width: 100%;
  background: var(--color-dark);
  border-radius: 0.125rem;
  transition: all var(--transition-slow) ease;
}

.hamburger.open span:nth-child(1) {
  transform: translateY(0.5625rem) rotate(45deg);
}

.hamburger.open span:nth-child(2) {
  opacity: 0;
}

.hamburger.open span:nth-child(3) {
  transform: translateY(-0.5625rem) rotate(-45deg);
}

/* Overlay */
.mobile-menu-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  animation: fadeIn var(--transition-slow) ease;
}

@media (max-width: 48rem) {
  .mobile-menu-overlay {
    display: block;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Slide-in Menu */
.mobile-menu {
  display: none;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  width: 85%;
  max-width: 21.875rem;
  background: var(--color-background);
  z-index: 1001;
  transform: translateX(100%);
  transition: transform var(--transition-slow) ease;
  overflow-y: auto;
  box-shadow: var(--shadow-lg);
}

@media (max-width: 48rem) {
  .mobile-menu {
    display: block;
  }
}

.mobile-menu.open {
  transform: translateX(0);
}

/* Menu Header */
.mobile-menu-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-lg) var(--spacing-md);
  border-bottom: 0.0625rem solid var(--color-gray-200);
}

.mobile-menu-header h2 {
  margin: 0;
  font-size: 1.5rem;
  color: var(--color-dark);
}

.mobile-menu-close {
  background: none;
  border: none;
  font-size: 2.5rem;
  color: var(--color-dark);
  cursor: pointer;
  line-height: 1;
  padding: 0;
  width: 2.5rem;
  height: 2.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-full);
  transition: background var(--transition-base);
}

.mobile-menu-close:hover {
  background: var(--color-white);
}

/* Navigation Links */
.mobile-menu-nav {
  display: flex;
  flex-direction: column;
  padding: var(--spacing-md) 0;
}

.mobile-menu-nav a {
  display: block;
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--color-dark);
  text-decoration: none;
  font-size: 1.125rem;
  font-weight: 500;
  transition: background var(--transition-base), color var(--transition-base);
  border-left: 0.1875rem solid transparent;
}

.mobile-menu-nav a:hover {
  background: var(--color-white);
}

.mobile-menu-nav a.active {
  color: var(--color-gray-700);
  background: var(--color-white);
  border-left-color: var(--color-dark);
}

.mobile-menu-nav a.admin-link {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.mobile-menu-nav a.admin-link .material-symbols-outlined {
  font-size: 1.25rem;
}

/* Cart Info */
.mobile-menu-cart-info {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-md) var(--spacing-lg);
  margin: var(--spacing-md);
  background: var(--color-white);
  border-radius: var(--radius-lg);
  color: var(--color-dark);
  font-weight: 500;
}

.mobile-menu-cart-info .cart-icon {
  font-size: 1.25rem;
}

/* ProductEditModal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 1.25rem;
}

.modal-content {
  background: white;
  border-radius: 1rem;
  max-width: 37.5rem;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 1.25rem 1.5625rem -0.3125rem rgba(0, 0, 0, 0.1),
    0 0.625rem 0.625rem -0.3125rem rgba(0, 0, 0, 0.04);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 0.0625rem solid #e1dbcb;
}

.modal-header h2 {
  margin: 0;
  font-size: 1.5rem;
  font-weight: 600;
  color: #101014;
}

.modal-close {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 0.5rem;
  transition: background 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-close:hover {
  background: #f2f0ea;
}

.modal-close .material-symbols-outlined {
  font-size: 1.5rem;
  color: #101014;
}

.product-form {
  padding: 1.5rem;
}

.form-group {
  margin-bottom: 1.25rem;
}

.form-group label {
  display: block;
  margin-bottom: 0.5rem;
  font-size: 1rem;
  color: #101014;
}

.form-group input,
.form-group textarea,
.form-group select {
  width: 100%;
  padding: 0.75rem;
  border: 0.0625rem solid #e1dbcb;
  border-radius: 0.5rem;
  font-size: 1rem;
  font-family: inherit;
  transition: border-color 0.2s;
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
  outline: none;
  border-color: #101014;
}

.form-group textarea {
  resize: vertical;
  max-height: 3.75rem;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.image-upload-section {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.image-preview {
  width: 100%;
  max-width: 18.75rem;
  border: 0.125rem solid #e1dbcb;
  border-radius: 0.5rem;
  overflow: hidden;
  background: #f2f0ea;
}

.image-preview img {
  width: 100%;
  height: auto;
  display: block;
}

.file-input {
  display: none;
}

.file-label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem;
  border: 0.125rem dashed #e1dbcb;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s;
  background: #f9f9f9;
  font-size: 1rem;
  color: #101014;
}

.file-label:hover {
  border-color: #101014;
  background: #f2f0ea;
}

.file-label .material-symbols-outlined {
  font-size: 1.25rem;
}

.helper-text {
  color: #101014;
  font-size: 1rem;
  margin: 0.25rem 0;
}

.error-message {
  background: #fee2e2;
  color: #991b1b;
  padding: 0.75rem;
  border-radius: 0.5rem;
  margin-bottom: 1.25rem;
  font-size: 1rem;
}

.modal-actions {
  display: flex;
  justify-content: flex-end;
  gap: 0.75rem;
  padding-top: 1.25rem;
  border-top: 0.0625rem solid #e1dbcb;
}

.btn-cancel,
.btn-save {
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
  border: none;
}

.btn-cancel {
  background: transparent;
  border: 0.0625rem solid #e1dbcb;
  color: #101014;
}

.btn-cancel:hover:not(:disabled) {
  background: #f2f0ea;
}

.btn-save {
  background: #101014;
  color: white;
}

.btn-save:hover:not(:disabled) {
  background: #333;
}

.btn-cancel:disabled,
.btn-save:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Delete section - separated and de-emphasized */
.delete-section {
  margin-top: 2.5rem;
  padding-top: 1.5rem;
  border-top: 0.0625rem solid #e1dbcb;
}

.btn-delete {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.625rem 1.25rem;
  border-radius: 0.5rem;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  border: 0.0625rem solid #e1dbcb;
  background: transparent;
  color: #dc3545;
}

.btn-delete:hover:not(:disabled) {
  background: #fff5f5;
  border-color: #dc3545;
}

.btn-delete:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-delete .material-symbols-outlined {
  font-size: 1.125rem;
}

@media (max-width: 48rem) {
  .modal-overlay {
    padding: 0;
    align-items: flex-end;
  }

  .modal-content {
    max-width: 100%;
    max-height: 95vh;
    border-radius: 1rem 1rem 0 0;
  }

  .form-row {
    grid-template-columns: 1fr;
  }

  .modal-actions {
    flex-direction: column;
  }

  .btn-cancel,
  .btn-save {
    width: 100%;
  }
}

/* Cart */
.cart-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.cart-sidebar {
  position: fixed;
  top: 0;
  right: 0;
  width: 28.125rem;
  max-width: 90vw;
  height: 100vh;
  background: var(--color-background);
  box-shadow: var(--shadow-xl);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  animation: slideIn var(--transition-slow) ease-out;
}

@keyframes slideIn {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}

.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-lg);
  border-bottom: 0.0625rem solid var(--color-gray-200);
}

.cart-header h2 {
  margin: 0;
  font-size: 1.5rem;
  color: var(--color-dark);
}

.close-btn {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: var(--color-gray-500);
  padding: var(--spacing-sm);
  line-height: 1;
  transition: color var(--transition-base);
}

.close-btn:hover {
  color: var(--color-dark);
}

.cart-content {
  flex: 1;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

.empty-cart {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-gray-500);
}

.cart-items {
  flex: 1;
  padding: var(--spacing-md);
}

.cart-item {
  display: flex;
  gap: var(--spacing-md);
  padding: var(--spacing-md);
  background: var(--color-white);
  border-radius: var(--radius-xl);
  margin-bottom: var(--spacing-md);
}

.cart-item-image {
  width: 5rem;
  height: 5rem;
  object-fit: cover;
  border-radius: var(--radius-lg);
}

.cart-item-details {
  flex: 1;
}

.cart-item-details h3 {
  margin: 0 0 var(--spacing-sm) 0;
  font-size: 1rem;
  color: var(--color-dark);
}

.cart-item-price {
  color: var(--color-dark);
  font-weight: 600;
  margin: 0 0 var(--spacing-sm) 0;
}

.quantity-controls {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.quantity-controls button {
  width: 1.75rem;
  height: 1.75rem;
  border: 0.0625rem solid var(--color-gray-200);
  background: var(--color-background);
  border-radius: var(--radius-sm);
  cursor: pointer;
  font-weight: 600;
  transition: all var(--transition-base);
}

.quantity-controls button:hover {
  background: var(--color-dark);
  color: var(--color-white);
  border-color: var(--color-dark);
}

.quantity-controls span {
  min-width: 1.5rem;
  text-align: center;
  font-weight: 600;
}

.remove-btn {
  background: none;
  border: none;
  color: var(--color-error);
  cursor: pointer;
  font-size: 1rem;
  padding: var(--spacing-sm);
  align-self: flex-start;
  transition: opacity var(--transition-base);
}

.remove-btn:hover {
  opacity: 0.7;
}

.cart-footer {
  border-top: 0.0625rem solid var(--color-gray-200);
  padding: var(--spacing-lg);
}

.cart-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
  font-size: 1.125rem;
  font-weight: 600;
}

.total-amount {
  font-size: 1.75rem;
  color: var(--color-dark);
}

.checkout-btn {
  width: 100%;
  background: var(--color-dark);
  color: var(--color-white);
  border: none;
  padding: var(--spacing-md);
  border-radius: var(--radius-md);
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: background var(--transition-base);
  margin-bottom: var(--spacing-sm);
}

.checkout-btn:hover {
  background: var(--color-dark-secondary);
}

.clear-cart-btn {
  width: 100%;
  background: none;
  color: var(--color-gray-500);
  border: 0.0625rem solid var(--color-gray-200);
  padding: var(--spacing-sm);
  border-radius: var(--radius-md);
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-base);
}

.clear-cart-btn:hover {
  background: var(--color-white);
  border-color: var(--color-gray-500);
}
/* ProductCard */
.product-card {
  background: var(--color-white);
  border: 0.0625rem solid var(--color-gray-200);
  border-radius: var(--radius-lg);
  overflow: hidden;
  transition: transform var(--transition-base),
    box-shadow var(--transition-base);
  height: 100%;
  display: flex;
  flex-direction: column;
}

.product-card:hover {
  transform: translateY(-0.25rem);
  box-shadow: var(--shadow-lg);
}

.product-image-container {
  position: relative;
  width: 100%;
  padding-top: 100%;
  padding-left: 0;
  padding-right: 0;
  padding-bottom: 0;
  overflow: hidden;
  background: var(--color-background);
  cursor: pointer;
  /* Reset button styles */
  border: none;
  font: inherit;
  text-align: left;
  display: block;
}

.product-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform var(--transition-slow);
}

.product-image:hover {
  transform: scale(1.05);
}

.stock-badge {
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
  background: var(--color-error);
  color: var(--color-white);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-full);
  font-size: 1rem;
  font-weight: 600;
}

.product-info {
  padding: var(--spacing-md);
  display: flex;
  flex-direction: column;
  flex: 1;
}

.product-category {
  font-size: 1rem;
  color: var(--color-gray-500);
  text-transform: uppercase;
  letter-spacing: 0.0313rem;
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
}

.product-name {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--color-dark);
  margin: 0 0 var(--spacing-sm) 0;
  line-height: 1.3;
}

.product-rating {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
}

.stars {
  color: var(--color-warning);
  font-size: 1rem;
}

.rating-text {
  font-size: 1rem;
  color: var(--color-gray-500);
}

.product-description {
  font-size: 1rem;
  color: var(--color-gray-600);
  line-height: 1.5;
  margin: 0 0 var(--spacing-md) 0;
  flex: 1;
}

.product-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--spacing-sm);
  margin-top: auto;
}

.product-price {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--color-dark);
}

.add-to-cart-btn {
  background: var(--color-dark);
  color: var(--color-white);
  border: none;
  padding: 0.625rem 1.25rem;
  border-radius: var(--radius-md);
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-base);
  white-space: nowrap;
}

.add-to-cart-btn:hover:not(:disabled) {
  background: var(--color-dark-secondary);
  transform: translateY(-0.0625rem);
  box-shadow: var(--shadow-sm);
}

.add-to-cart-btn:disabled {
  background: var(--color-gray-300);
  color: var(--color-gray-500);
  cursor: not-allowed;
}
/* ProductGallery */
.product-gallery-container {
  max-width: var(--layout-max-width, 65.625rem);
  margin: 0 auto;
  padding: var(--spacing-xl) var(--spacing-md);
}

.gallery-header {
  margin-bottom: var(--spacing-xl);
}

.gallery-header h1 {
  font-size: 2.25rem;
  font-weight: 700;
  color: var(--color-dark);
  margin: 0 0 var(--spacing-lg) 0;
}

.category-filters {
  display: flex;
  gap: var(--spacing-sm);
  flex-wrap: wrap;
}

.category-btn {
  padding: 0.625rem 1.25rem;
  border: 0.125rem solid var(--color-gray-200);
  background: var(--color-background);
  color: var(--color-dark);
  border-radius: var(--radius-lg);
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-base);
}

.category-btn:hover {
  border-color: var(--color-dark);
  color: var(--color-dark);
}

.category-btn.active {
  background: var(--color-dark);
  color: var(--color-white);
  border-color: var(--color-dark);
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(17.5rem, 1fr));
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-2xl);
}

.no-products {
  text-align: center;
  padding: 4rem var(--spacing-md);
  color: var(--color-gray-500);
}

@media (max-width: 48rem) {
  .product-grid {
    grid-template-columns: repeat(auto-fill, minmax(15rem, 1fr));
    gap: var(--spacing-md);
  }

  .gallery-header h1 {
    font-size: 1.75rem;
  }
}
/* Toast */
.toast {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-md) 1.25rem;
  background: var(--color-white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  min-width: 18.75rem;
  max-width: 31.25rem;
  animation: slideIn var(--transition-slow) ease-out;
  margin-bottom: var(--spacing-sm);
  border-left: 0.25rem solid;
}

.toast-exit {
  animation: slideOut var(--transition-slow) ease-out forwards;
}

@keyframes slideIn {
  from {
    transform: translateX(25rem);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes slideOut {
  from {
    transform: translateX(0);
    opacity: 1;
  }
  to {
    transform: translateX(25rem);
    opacity: 0;
  }
}

.toast-success {
  border-left-color: var(--color-success);
}

.toast-error {
  border-left-color: var(--color-error);
}

.toast-warning {
  border-left-color: var(--color-warning);
}

.toast-info {
  border-left-color: var(--color-dark);
}

.toast-icon {
  font-size: 1.25rem;
  font-weight: bold;
  flex-shrink: 0;
  width: 1.5rem;
  height: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-full);
  background: var(--color-white);
}

.toast-success .toast-icon {
  color: var(--color-success);
}

.toast-error .toast-icon {
  color: var(--color-error);
}

.toast-warning .toast-icon {
  color: var(--color-warning);
}

.toast-info .toast-icon {
  color: var(--color-dark);
}

.toast-message {
  flex: 1;
  color: var(--color-dark);
  font-size: 1rem;
  line-height: 1.4;
  font-weight: 500;
}

.toast-close {
  background: none;
  border: none;
  color: var(--color-gray-500);
  font-size: 1.125rem;
  cursor: pointer;
  padding: var(--spacing-xs);
  line-height: 1;
  flex-shrink: 0;
  transition: color var(--transition-base);
}

.toast-close:hover {
  color: var(--color-dark);
}

@media (max-width: 48rem) {
  .toast {
    min-width: unset;
    max-width: calc(100vw - 32px);
  }
}
/* ToastContainer */
.toast-container {
  position: fixed;
  top: 5rem;
  right: var(--spacing-md);
  z-index: 9999;
  display: flex;
  flex-direction: column;
  pointer-events: none;
}

.toast-container > * {
  pointer-events: auto;
}

@media (max-width: 48rem) {
  .toast-container {
    top: 4.375rem;
    right: var(--spacing-md);
    left: var(--spacing-md);
  }
}
/* =====================================
   PAGES
   ===================================== */

/* About */
.about-container {
  width: 100%;
}

.about-hero {
  background: var(--color-white);
  padding: 5rem var(--spacing-md) 3.75rem;
  text-align: center;
  border-bottom: 0.0625rem solid var(--color-gray-200);
}

.about-hero h1 {
  font-size: 3rem;
  margin: 0 0 var(--spacing-md) 0;
  color: var(--color-dark);
}

.about-lead {
  font-size: 1.25rem;
  color: var(--color-gray-600);
  max-width: 43.75rem;
  margin: 0 auto;
  line-height: 1.6;
}

.about-content {
  max-width: 56.25rem;
  margin: 0 auto;
  padding: 3.75rem var(--spacing-md);
}

.values-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(15.625rem, 1fr));
  gap: var(--spacing-xl);
  margin-top: var(--spacing-xl);
}

.value-item {
  padding: var(--spacing-lg);
  background: var(--color-white);
  border-radius: var(--radius-lg);
  border: 0.0625rem solid var(--color-gray-200);
  transition: all var(--transition-base);
}

.value-item:hover {
  box-shadow: var(--shadow-lg);
  transform: translateY(-0.125rem);
}

.value-item h3 {
  font-size: 1.25rem;
  margin: 0 0 var(--spacing-sm) 0;
  color: var(--color-primary);
}

.value-item p {
  font-size: 1rem;
  line-height: 1.6;
  margin: 0;
  color: var(--color-gray-600);
}

@media (max-width: 48rem) {
  .about-hero {
    padding: 3.75rem var(--spacing-md) 2.5rem;
  }

  .about-hero h1 {
    font-size: 2.25rem;
  }

  .about-lead {
    font-size: 1.125rem;
  }

  .about-content {
    padding: 2.5rem var(--spacing-md);
  }

  .about-section {
    margin-bottom: 2.5rem;
  }

  .about-section h2 {
    font-size: 1.75rem;
  }

  .about-section p {
    font-size: 1rem;
  }

  .values-grid {
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }
}
/* AdminCustomers */
.admin-customers {
  max-width: 87.5rem;
}

.customers-header {
  margin-bottom: 1.5rem;
}

.customers-header h2 {
  font-size: 1.5rem;
  font-weight: 600;
  margin: 0;
  color: #101014;
}

.customers-table-container {
  background: white;
  border-radius: 1rem;
  overflow: hidden;
  overflow-x: auto;
  box-shadow: 0 0.0625rem 0.1875rem rgba(0, 0, 0, 0.1);
}

.customers-table {
  width: 100%;
  border-collapse: collapse;
}

.customers-table thead {
  background: #f9fafb;
  border-bottom: 0.0625rem solid #e1dbcb;
}

.customers-table th {
  padding: 1rem;
  text-align: left;
  font-size: 1rem;
  font-weight: 600;
  color: #101014;
  text-transform: uppercase;
  letter-spacing: 0.0313rem;
}

.customers-table tbody tr {
  border-bottom: 0.0625rem solid #f0f0f0;
  transition: background 0.2s;
}

.customers-table tbody tr:hover {
  background: #f9fafb;
}

.customers-table tbody tr:last-child {
  border-bottom: none;
}

.customers-table td {
  padding: 1rem;
  font-size: 1rem;
  color: #101014;
}

.customer-total {
  font-weight: 600;
}

.no-data {
  padding: 3.75rem;
  text-align: center;
  color: #e1dbcb;
  font-size: 1rem;
}

.loading {
  padding: 3.75rem;
  text-align: center;
  color: #e1dbcb;
  font-size: 1rem;
}

@media (max-width: 48rem) {
  /* Card layout for mobile */
  .customers-table-container {
